{
  "ts-node": {
    "esm": true,
    "swc": true,
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ESNext"],
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist/server",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
  },
  "include": ["src/server", "src/socket"],
}
