{
  "ts-node": {
    "esm": true,
    "swc": true,
  },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "jsx": "react-jsx",
  },
  "include": ["src", "./*.ts", "jest.config.js", "jest.config.js"],
}
